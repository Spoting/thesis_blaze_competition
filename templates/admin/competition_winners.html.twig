{% extends '@EasyAdmin/page/content.html.twig' %}

{% block page_title %}
    Winners for {{ competition.title }}
{% endblock %}

{% block content %}
    <div class="ea-content-body">
        <div class="card p-4">
            <h2 class="text-xl font-semibold mb-4 text-blue-900">Winners for "{{ competition.title }}" (ID: {{ competition.id }})</h2>

            {% if winners is empty %}
                <div class="alert alert-info">
                    No winners have been announced for this competition yet.
                </div>
            {% else %}
                {# Removed Tailwind background/border colors from here, handled by custom CSS #}
                <div class="overflow-x-auto rounded-md shadow-sm">
                    {# Removed Tailwind background/border colors from here, handled by custom CSS #}
                    <table class="min-w-full divide-y">
                        <thead>
                            {# Removed Tailwind background color from here, handled by custom CSS #}
                            <tr>
                                {# Kept text/spacing classes #}
                                <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Rank</th>
                                <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Email</th>
                                <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Submission Date</th>
                                {# You might add more columns here, e.g., for submission data details #}
                            </tr>
                        </thead>
                        {# Removed Tailwind background/border colors from here, handled by custom CSS #}
                        <tbody class="divide-y">
                            {% for winner in winners %}
                                {# Removed all background/hover color classes, handled by custom CSS #}
                                <tr>
                                    {# Kept text/spacing classes #}
                                    <td class="px-4 py-3 whitespace-nowrap text-sm font-medium text-gray-900">{{ winner.rank }}</td>
                                    <td class="px-4 py-3 whitespace-nowrap text-sm text-gray-700">{{ winner.email }}</td>
                                    <td class="px-4 py-3 whitespace-nowrap text-sm text-gray-700">{{ winner.submission.createdAt|date('Y-m-d H:i:s') }}</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {% block importmap %}{{ importmap('admin_app') }}{% endblock %}
{% endblock %}