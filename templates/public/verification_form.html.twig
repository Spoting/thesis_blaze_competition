{% extends 'base.html.twig' %}

{% block title %}Verify Your Submission{% endblock %}

{% block body %}
    <div class="container my-5">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="card shadow-sm">
                    <div class="card-header bg-primary text-white">
                        <h4 class="mb-0">Verify Your Email Address</h4>
                    </div>
                    <div class="card-body">
                        <p class="card-text mb-4">
                            We've sent a verification code to **{{ email|default('your email address') }}**. Please check your inbox (and spam folder!) and enter the code below to complete your submission.
                        </p>

                        {{ form_start(form) }}
                            <div class="mb-3">
                                {{ form_label(form.token) }}
                                {{ form_widget(form.token, {'attr': {'class': 'form-control', 'autocomplete': 'one-time-code'}}) }} {# autocomplete for mobile UX #}
                                {{ form_errors(form.token) }}
                                <div class="form-text">The code is usually 36 characters long.</div>
                            </div>

                            <div class="d-grid gap-2">
                                {{ form_widget(form.submit, {'attr': {'class': 'btn btn-primary btn-lg'}}) }}
                            </div>
                        {{ form_end(form) }}

                        <hr class="my-4">

                        <p class="text-center">
                            Didn't receive the email?
                            {# You might add a link here to a 'resend verification' route #}
                            {# Example: <a href="{{ path('app_resend_verification_email', {'email': email|default('')}) }}" class="btn btn-link">Resend Code</a> #}
                            {# If you still can't find it after a few minutes, you might need to <a href="{{ path('app_competition_submit') }}">resubmit your entry</a>. #}
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}