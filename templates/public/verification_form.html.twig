{# templates/public/verification_form.html.twig #}
{% extends 'base.html.twig' %} {# Assuming base.html.twig loads Tailwind #}

{% block title %}Verify Your Submission{% endblock %}

{% block body %}
    <div class="container mx-auto my-10 p-4 max-w-xl"> {# Outer container for spacing #}
        <div class="flex justify-center"> {# Centers the card #}
            <div class="w-full"> {# Card width #}
                {# Card styling #}
                <div class="bg-white shadow-lg rounded-lg overflow-hidden">
                    {# Card header #}
                    <div class="bg-blue-600 text-white p-4">
                        <h4 class="text-xl font-semibold m-0">Verify Your Email Address</h4>
                    </div>
                    {# Card body #}
                    <div class="p-6">
                        <p class="text-gray-700 mb-6">
                            We've sent a verification code to <span class="font-bold">{{ email|default('your email address') }}</span>. Please check your inbox (and spam folder!) and enter the code below to complete your submission.
                        </p>

                        {# NEW: Apply max-w-xs mx-auto directly to the form tag #}
                        {{ form_start(form, {'attr': {'class': 'space-y-4 max-w-xs mx-auto'}}) }}
                            <div class="mb-4">
                                {{ form_label(form.token, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 text-center'}}) }}
                                {# Keep w-full on input, it will now fill the max-w-xs form #}
                                {{ form_widget(form.token, {'attr': {'class': 'mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm text-center', 'autocomplete': 'one-time-code'}}) }}
                                {{ form_errors(form.token, {'attr': {'class': 'text-red-500 text-sm mt-1 text-center'}}) }}
                                <div class="text-xs text-gray-500 mt-1 text-center">The code is usually 36 characters long.</div>
                            </div>

                            <div>
                                {# Keep w-full on button, it will now fill the max-w-xs form #}
                                {{ form_widget(form.submit, {'attr': {'class': 'w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 px-4 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2'}}) }}
                            </div>
                        {{ form_end(form) }}

                        <hr class="my-6 border-gray-300">

                        <p class="text-center text-gray-600">
                            Didn't receive the email?
                            {# Example: <a href="{{ path('app_resend_verification_email', {'email': email|default('')}) }}" class="text-blue-600 hover:text-blue-800">Resend Code</a> #}
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}