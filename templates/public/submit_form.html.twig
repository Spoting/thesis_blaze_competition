{% block body %}
    <h1>{{ competition.title }} - Δήλωση Συμμετοχής</h1>

    {% if message %}
        <div class="alert alert-info" role="alert">
            {{ message }}
        </div>
    {% endif %}    

    {% include 'public/_competition_item.html.twig' with {'competition': competition} %}

    {{ form_start(form) }}
        {{ form_widget(form) }}
    {{ form_end(form) }}

    <p><a href="{{ path('public_competitions') }}">Επιστροφή στη λίστα διαγωνισμών</a></p>
{% endblock %}